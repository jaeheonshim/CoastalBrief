<section>
  <div class="container mx-auto">
    <div class="flex justify-center items-center flex-wrap text-gray-800">
      <div class="xl:w-11/12">
        <div class="block bg-blue-500 rounded-lg flex">
          <div class="px-8 py-6 flex items-center pr-16 border-r-2">
            <div>
              <img src="http://openweathermap.org/img/wn/<%= weather.weather.icon %>@2x.png">
            </div>
            <div class="mt-3 ml-2">
              <p class="text-5xl text-white mb-0 font-semibold"><%= kToF(weather.main.temp) %>°</p>
              <p class="text-lg text-white mt-0"><%= kToF(weather.main.temp_max) %>° / <%= kToF(weather.main.temp_min) %>°</p>
            </div>
          </div>
          <div class="text-white px-8 py-6 items-center flex pr-16 border-r-2 gap-x-20">
            <div>
              <p class="text-2xl font-semibold mb-2"><%= weather.weather.main %></p>
              <p class="text-lg mb-0 mt-0"><b>Pressure</b>: <%= weather.main.pressure %> hPa</p>
              <p class="text-lg mb-0 mt-0"><b>Humidity</b>: <%= weather.main.humidity %>%</p>
            </div>
            <div>
              <br class="mb-3">
              <p class="text-lg mb-0 mt-0"><b>Wind Speed</b>: <%= weather.wind.speed %> m/s</p>
              <p class="text-lg mb-0 mt-0"><b>Visibility</b>: <%= weather.visibility %> m</p>
            </div>
          </div>
          <div class="text-white px-8 py-6 items-center flex pr-16 gap-x-20">
            <div>
              <p class="text-xl font-semibold mb-1"><i class="fa-solid fa-person-swimming"></i> Swimming</p>
              <p class="text-lg mb-3 mt-0"><%= weather.advice.swimming[1] %></p>
              <p class="text-xl font-semibold mb-1"><i class="fa-solid fa-water"></i> Surfing</p>
              <p class="text-lg mb-0 mt-0"><%= weather.advice.surfing[1] %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>